

{% block title %}Log in!{% endblock %}

{% block body %}
        {% block stylesheets %}

            <link rel="stylesheet" href="{{ asset('styles/app.scss') }}">
            <link rel="stylesheet" href="{{ asset('styles/mainContent.scss') }}">
            <link rel="stylesheet" href="{{ asset('styles/loginForm.scss') }}">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <!DOCTYPE html>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<body>
    <div class="form">
        <div class="background">
            <div class="shape"></div>
            <div class="shape"></div>
        </div>
        <form method="post" style = "height:620px;">
                {% if error %}
                <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                <div class="alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            
            <h1 class="h3 mb-3 font-weight-normal">
                <a href="{{ path('app_main') }}"><img src="{{asset('images/logo (1) — kopia.png')}}" class="logoLogin"/></a>
            </h1>
            <h3>Zaloguj się</h3>

            <label for="username">Email</label>
            <input type="text" placeholder="Email" id="username" type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>

            <label for="password">Hasło</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            <button class="btn btn-lg btn-primary" type="submit">
                ZALOGUJ
            </button>
            <div class="links">
                <a href="{{ path('app_forgot_password_request') }}">Resetuj Hasło</a>
                <a href="{{ path('app_register') }}">Rejestracja</a>
            </div>    

            
        </form>
    </div>
</body>
</html>

    
{% endblock %}
